%h3= t(:my_subscriptions, scope: :random_subscriptions)
- if @subscriptions.present?
  %table
    %thead
      %tr
        %th= t(:subscribed_product, scope: :random_subscriptions)
        %th= t(:subscribed_on, scope: :random_subscriptions)
        %th= t(:issues, scope: :random_subscriptions)
        %th= t(:actions, scope: :random_subscriptions)
    %tbody
      = render @subscriptions
- else
  %p= t(:no_subscriptions_yet, scope: :random_subscriptions)
